{
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "outDir": "./build",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "typeRoots": ["./node_modules/@types"],
    "noImplicitAny": false
  },
  "include": ["src/**/*.ts", "src/validators/schemas/**/*.json"],
  "exclude": ["node_modules", "**/*.test.ts", "**/*.spec.ts", "src/utils/test-utils/**", "src/dev-only"]
}